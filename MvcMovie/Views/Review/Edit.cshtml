@model MvcMovie.Models.Review

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit Review </h2>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ReviewID" />
            <div class="form-group">
                <label asp-for="Detail" class="control-label"></label>
                <input asp-for="Detail" class="form-control" />
                <span asp-validation-for="Detail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <input type="hidden" data-val="true" data-val-required="The MovieID field is required." id="MovieID" name="MovieID" value="@ViewData["movieID"]" />

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
				 <a class="btn btn-default" asp-controller="Movies" asp-action="Details" asp-route-id="@ViewData["movieID"]">Cancel</a>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
