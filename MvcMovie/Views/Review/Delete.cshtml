@model MvcMovie.Models.Review

@{
    ViewData["Title"] = "Delete";
}



<h2>Are you sure you want to delete this review of @ViewData["movieTitle"]?</h2>
<div>
    
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Detail)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Detail)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Movie)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Movie.Title)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ReviewID" />
        <input type="submit" value="Delete" class="btn btn-default" /> 
		<a class="btn btn-default" asp-controller="Movies" asp-action="Details" asp-route-id="@ViewData["movieID"]">Cancel</a>

    </form>
</div>
