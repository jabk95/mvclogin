@model MvcMovie.Models.ReviewList

@{
    ViewData["Title"] = "Details";
}

<h2>Movie Details</h2>

<div> 
	 
    <hr />
     <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.movie.Title)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.movie.Title)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.movie.ReleaseDate)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.movie.ReleaseDate)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.movie.Genre)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.movie.Genre)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.movie.Rating)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.movie.Rating)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.movie.Price)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.movie.Price)
        </dd>
    </dl>
     <div >
        <a class="btn btn-success" asp-action= "Edit" asp-route-id="@Model.movie.ID"> Edit </a> 
        <a class="btn btn-default" asp-action="Index">Back to List</a>
    </div>
        <h3>Reviews</h3>
<table class="table">
    <tbody>
@foreach (var item in Model.reviews) {
        <tr>
            <td>
                <p>@Html.DisplayFor(modelItem => item.Detail)</p>
           
                - @Html.DisplayFor(modelItem => item.Name)
            </td>

            <td>
                <a class="btn btn-xs btn-default" asp-controller= "Review" asp-action="Edit" asp-route-id="@item.ReviewID">Edit</a> 
                <a class="btn btn-xs btn-default" asp-controller= "Review" asp-action="Delete" asp-route-id="@item.ReviewID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

</div>
<a class="btn btn-lg btn-info" asp-controller="Review" asp-action= "Create" asp-route-id="@Model.movie.ID">Write A Review</a>
	
   